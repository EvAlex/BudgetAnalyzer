@model BudgetAnalyzer.ViewModels.StatementViewModel

@{
    ViewData["Title"] = "Upload Statement";
}

<h2>Create</h2>

<div>
    @if (Model.Attachment == null)
    {
        <p>Attachment is null</p>
    }
    else
    {
        <dl>
            <dt>ContentDisposition</dt>
            <dd>@Model.Attachment.ContentDisposition</dd>
            <dt>ContentType</dt>
            <dd>@Model.Attachment.ContentType</dd>
            <dt>Length</dt>
            <dd>@Model.Attachment.Length</dd>
            <dt>Headers</dt>
            <dd>@(string.Join(", ", Model.Attachment.Headers.Select(kv => kv.Key + " - " + kv.Value)))</dd>
        </dl>
    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
