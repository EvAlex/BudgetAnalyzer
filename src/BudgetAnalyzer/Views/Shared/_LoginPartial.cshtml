@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <nav-link asp-controller="BankAccounts">My Bank Accounts</nav-link>
            <nav-link asp-controller="Manage" asp-action="Index">Hello @User.GetUserName()!</nav-link>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <nav-link asp-controller="Account" asp-action="Register">Register</nav-link>
        <nav-link asp-controller="Account" asp-action="Login">Log in</nav-link>
    </ul>
}
